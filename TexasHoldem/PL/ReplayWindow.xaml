<Window x:Class="PL.ReplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="GameWindow" HorizontalContentAlignment="Stretch" WindowStartupLocation="CenterOwner" VerticalContentAlignment="Stretch">
    <Window.Background>
        <ImageBrush ImageSource="resources/game_window.png"/>
    </Window.Background>
    <UniformGrid Columns="1">
        <UniformGrid Name="TopRow" Rows="1"/>
        <UniformGrid Name="UpperMiddleRow" Rows="1"/>
        <UniformGrid Name="LowerMiddleRow" Rows="1"/>
        <UniformGrid Name="BottomRow" Rows="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </UniformGrid>
</Window>
